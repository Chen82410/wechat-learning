/* pages/home.wxss */
.content {
  width: 100%;
  box-sizing: border-box;
  padding-left: 15px;
  padding-right: 15px;
}

.hot-invitation {
  margin-left: 15px;
  /* margin-top: 15px; */
  margin-bottom: 15px;
  display: flex;
  align-items: center;
}
.hot-invitation .box {
  padding: 8px 2px;
  background-image: linear-gradient(-180deg, #6381FF 4%, #4568FD 97%);
  border-radius: 8px;
  margin-right: 12px;
}
.hot-invitation .box .text {
  font-family: PingFangSC Medium;
  font-size: 18px;
  color: #2C3A53;
  font-weight: bold;
}
.content-item {
  width: 100%;
  /* padding-top: 1.1875rem; */
  padding-left: 1.34375rem;
  padding-right: 1.34375rem;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  color: #4A4A4A;
  margin-bottom: 8px;
  border-radius: 8px;
  /* border-bottom: .0625rem solid #e0e0e0; */
  border: 0.0625rem solid rgba(12,27,48,0.06);
  box-shadow: 0 2px 12px 0 rgba(12,27,48,0.06);
}
