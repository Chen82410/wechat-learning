.home-root {
  /*  加载更多   */
}
.home-root .content {
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.home-root .content .hot-invitation {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}
.home-root .content .hot-invitation .box {
  display: block;
  padding: 16rpx 4rpx;
  background-image: linear-gradient(-180deg, #6381FF 4%, #4568FD 97%);
  border-radius: 16rpx;
  margin-right: 24rpx;
}
.home-root .content .hot-invitation .box .text {
  font-family: PingFangSC Medium;
  font-size: 36rpx;
  color: #2C3A53;
  font-weight: bold;
}
.home-root .content .content-item {
  width: 100%;
  padding-left: 43rpx;
  padding-right: 43rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  color: #4A4A4A;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
  border: 0.0625rem solid rgba(12, 27, 48, 0.06);
  box-shadow: 0 4rpx 24rpx 0 rgba(12, 27, 48, 0.06);
}
.home-root .content .content-item .head-item {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.home-root .content .content-item .head-item .avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.home-root .content .picture-view {
  width: 100%;
}
.home-root .content .picture-view .picture-item {
  flex: 0 1 auto;
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 8rpx;
  margin-bottom: 8rpx;
  object-fit: cover;
}
.home-root .content .picture-view .picture-item:nth-child(3n) {
  margin-right: 0;
}
.home-root .weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.home-root .weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.home-root .weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
